

<h1>@ViewBag.Title</h1>

<form asp-controller="NutritionPlan" asp-action="Remove" method="post">

    @foreach (var nutritionPlan in ViewBag.nutritionPlans)
    {
        <input type="checkbox" name="nutritionPlanIds" id="@nutritionPlan.ID" value="@nutritionPlan.ID" />
        <label for="@nutritionPlan.ID">@nutritionPlan.Name</label>
        
        <br />
    }

    <input type="submit" value="Remove Selected Nutrition Plan(s)" />
</form>