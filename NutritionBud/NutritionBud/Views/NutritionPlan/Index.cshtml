@model List<NutritionBud.Models.NutritionPlan>

<h1>Nutrition Plan</h1>

<p><a asp-controller="NutritionPlan" asp-action="Add">Add</a> | <a asp-controller="NutritionPlan" asp-action="Remove">Remove</a></p>

<hr />

@if (Model.Count == 0)
{
    <p>No plans created yet!</p>
}
else
{ 
<table class="table">
    <tr>
        <th>Nutrition Plan</th>
        <th>Description</th>
    </tr>
    @foreach (var nutritionPlan in Model)
    {
        <tr>
            <td>@nutritionPlan.Name</td>
            <td>@nutritionPlan.Description</td>
        </tr>
    }
</table>
}

<hr />

<p><a asp-controller="NutritionPlan" asp-action="Add">Add</a> | <a asp-controller="NutritionPlan" asp-action="Remove">Remove</a></p>